    "url": "https://github.com/omegascorp/vending-machine/issues"
  },
  "homepage": "https://github.com/omegascorp/vending-machine#readme",
  "dependencies": {
    "body-parser": "^1.19.1",
    "cookie-parser": "^1.4.6",
    "express": "^4.17.2",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "log4js": "^6.4.1",
    "mongoose": "5.13.14",
    "mz": "^2.7.0",
    "passport": "^0.5.2",
    "passport-local": "^1.0.0",
    "path-router-express": "^1.0.0",
